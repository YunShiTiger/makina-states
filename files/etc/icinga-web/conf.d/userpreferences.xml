<?xml version="1.0" encoding="UTF-8"?>
<!-- MANAGED VIA SALT -- DO NOT EDIT -->
{% set data = salt['mc_utils.json_load'](data) %}
<userpreferences xmlns="http://agavi.org/agavi/config/parts/module/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <!--
        Icinga-web configuration

        *** USERPREFERENCES ***

        This settings are duplicated in users preferences for the first login. If you want to reset
        this state you have to purge the db preferences:

        $ cd etc/
        $ ../bin/phing db-purge-userprefs

        *** Keep at minimum one ae:parameter line in that file ***
    -->


    <!--
        Type: Integer

        Maximum items per page in a grid.
    -->
    <ae:parameter name="org.icinga.grid.pagerMaxItems">{{data.userpreferences_xml.org_icinga_grid_pagerMaxItems}}</ae:parameter>

    <!--
        Type: Integer

        Grid / Cronk refresh time
    -->
    <ae:parameter name="org.icinga.grid.refreshTime">{{data.userpreferences_xml.org_icinga_grid_refreshTime}}</ae:parameter>

    <!--
        Type: Integer

        Pluginoutput or other long text truncate value
    -->
    <ae:parameter name="org.icinga.grid.outputLength">{{data.userpreferences_xml.org_icinga_grid_outputLength}}</ae:parameter>

    <!--
        Type: Integer

        Seconds to switch to the next tab
    -->
    <ae:parameter name="org.icinga.tabslider.changeTime">{{data.userpreferences_xml.org_icinga_tabslider_changeTime}}</ae:parameter>

    <!--
        Type: String

        Name of the cronk (cronk uid) which is loaded as "Welcome" panel
    -->
    <ae:parameter name="org.icinga.cronk.default">{{data.userpreferences_xml.org_icinga_cronk_default}}</ae:parameter>

    <!--
        Type: Boolean

        JS Bugtracker enabled (Showing the tiny green bug at top right corner)
    -->
    <ae:parameter name="org.icinga.bugTrackerEnabled">{{data.userpreferences_xml.org_icinga_bugTrackerEnabled}}</ae:parameter>

    <!--
        Type: Boolean

        JS errors to message balloon (Better say no here, because 1000 errors produce 1000 balloons)
    -->
    <ae:parameter name="org.icinga.errorNotificationsEnabled">{{data.userpreferences_xml.org_icinga_errorNotificationsEnabled}}</ae:parameter>

    <!--
        Type: Boolean

        Default autorefresh on (Grid / other Cronks)
    -->
    <ae:parameter name="org.icinga.autoRefresh">{{data.userpreferences_xml.org_icinga_autoRefresh}}</ae:parameter>

    <!--
        Type: Integer

        Refresh time in seconds of the upper summary status Cronk panels
    -->
    <ae:parameter name="org.icinga.status.refreshTime">{{data.userpreferences_xml.org_icinga_status_refreshTime}}</ae:parameter>

    <!--
        Type: Enum(icon|list)

        Style of the cronk listing panel
            "icon": Old behaviour, bigger icons
            "list": New behaviour, smaller icons, list type
    -->
    <ae:parameter name="org.icinga.cronk.liststyle">{{data.userpreferences_xml.org_icinga_cronk_liststyle}}</ae:parameter>
</userpreferences>
