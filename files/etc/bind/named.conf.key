// Key
{% set data = salt['mc_utils.json_load'](data) %}
{% for key, sdata in data['keys'].items() %}
key "{{key}}" {
      algorithm {{sdata.algorithm}};
      secret "{{sdata.secret}}";
};
{% endfor %}

// rndc configuration
include "/etc/bind/rndc.key";
controls {
      inet 127.0.0.1
      port 953
      allow { 127.0.0.1; }
      keys { "rndc-key"; };
};
