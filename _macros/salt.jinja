  cmd.run:
    - name: >
            service {{ data.daemon_name }} stop ;\
            service {{ data.daemon_name }} start &&\
            echo "Reloading {{ data.daemon_name }}" &&\
            sleep 5 &&\
            rm -f "{{ data.msr }}/.restart_{{ data.daemon_name }}"
    - onlyif: ls "{{ data.msr }}/.restart_{{ data.daemon_name }}"
